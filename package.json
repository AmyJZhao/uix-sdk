{
  "name": "@adobe/uix-sdk",
  "version": "0.0.5",
  "description": "Tools for embedding UI Extensions into Adobe apps",
  "publishConfig": {
    "registry": "https://artifactory.corp.adobe.com/artifactory/api/npm/npm-adobe-platform-release/"
  },
  "type": "module",
  "browser": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*/index.js"
  },
  "files": [
    "dist",
    "src",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "concurrently 'npm:clean:dist' 'npm:format' && npm run compile:prod",
    "clean": "concurrently 'npm:clean:*'",
    "clean:dist": "rm -rf dist *.tsbuildinfo",
    "clean:examples": "rm -rf examples/*/{dist,node_modules}",
    "compile": "tsc --build",
    "compile:debug": "tsc --build tsconfig-debug.json --verbose",
    "compile:watch": "tsc-watch --noClear --onSuccess 'npm run -s dev:link'",
    "compile:prod": "tsc --project tsconfig-prod.json",
    "dev": "npm run -s examples:install && npm run -s compile && npm run -s dev:link && node scripts/multi-server.js --dev",
    "dev:link": "yalc publish --quiet --push --update",
    "examples:build": "node scripts/run-on-examples.js 'npm run -s build'",
    "examples:install": "node scripts/run-on-examples.js 'npm install -s'",
    "examples:serve": "concurrently 'npm run -s compile:prod' 'npm run -s examples:install' && npm run -s examples:build && node scripts/multi-server.js",
    "format": "prettier --write --loglevel warn src && eslint --fix .",
    "lint": "prettier --check --loglevel warn src && eslint .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserslist": [
    "> 0.2%, last 2 versions, not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://git.corp.adobe.com/dx-devex-acceleration/uix-sdk.git"
  },
  "author": "Adobe, Inc,",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/react": "^17.0.16",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "chalk": "^5.0.1",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "figures": "^4.0.1",
    "penpal": "^6.2.2",
    "prettier": "^2.6.2",
    "react": "^17.0.2",
    "ts-loader": "^9.3.0",
    "tsc-watch": "^5.0.3",
    "typedoc": "^0.23.7",
    "typescript": "^4.7.2",
    "yalc": "^1.0.0-pre.53"
  },
  "peerDependencies": {
    "penpal": "^6.2.2",
    "react": "^17.0.2"
  }
}
