{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "composite": false,
    "declaration": false,
    "isolatedModules": false,
    "target": "ES2020",
    "sourceMap": false
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.tsx?"],
  "typedocOptions": {
    "entryPoints": [
      "src/guest/index.ts",
      "src/host/index.ts",
      "src/react/index.ts",
    ],
    "emit": "both",
    "excludeInternal": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "out": "docs",
    "preserveWatchOutput": true,
    "readme": "README.md",
    "searchInComments": true
  }
}
